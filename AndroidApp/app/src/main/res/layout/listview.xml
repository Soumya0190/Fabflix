<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
                android:scrollbarStyle="outsideOverlay"
                android:isScrollContainer="true"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbarFadeDuration="0"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:theme="@style/Theme.AppCompat"
                android:fadeScrollbars="false"
                tools:context=".ListViewActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" >
            <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Previous" android:id="@+id/prevBtn" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Next" android:id="@+id/nextBtn" />
        </LinearLayout>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lstmessage"
                android:layout_centerHorizontal = "true"
                android:textSize = "25dp"/>
        <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_below="@+id/message"
                android:layout_height="match_parent" android:isScrollContainer="true"  />
        <!--LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_below="@+id/list">
            <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Previous" android:id="@+id/prevBtn" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Next" android:id="@+id/nextBtn" />
        </LinearLayout -->
    </LinearLayout>
</RelativeLayout>